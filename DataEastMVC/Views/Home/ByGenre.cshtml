@model IEnumerable<DataEastMVC.Models.ArcadeList>

@{ViewBag.Title = "Arcade List By Genre";}


<h2>Arcade List By Genre</h2>

<div class="row">
    <div class="col-md-10">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Release_Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hardware_Type)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Release_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hardware_Type)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
